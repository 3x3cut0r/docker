# Set default values for all following accounts.
defaults
auth            on
tls             {SMTP_TLS}
tls_trust_file  {SMTP_CONFIG_DIR}/ssl/certs/ca-certificates.crt
logfile         /data/log/msmtp.log

# Sending defaults
account         filesender
protocol        smtp
host            {SMTP_HOST}
port            {SMTP_PORT}
tls	            {SMTP_TLS}
auth	        {SMTP_AUTH}
user	        {SMTP_USER}
password        {SMTP_PASSWORD}
from	        {SMTP_FROM}

# Set a default account
account default : filesender
